{
  "name": "percollate-api-client",
  "version": "1.0.0",
  "description": "Web client for percollate api",
  "license": "MIT",
  "scripts": {
    "dev": "sapper dev",
    "build:ssr": "sapper build",
    "build": "sapper export",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "eslint": "eslint -c .eslintrc.js *.{js,svelte}",
    "prettier": "prettier --write *.{ts,tsx,js,jsx,json,css,md,svelte}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint -c .eslintrc.js"
    ],
    "*.{ts,tsx,js,jsx,json,css,md,svelte}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "polka": "^0.5.2",
    "sirv": "^0.4.2",
    "svelte-preprocess-sass": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/runtime": "^7.9.2",
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@kazzkiq/svelte-preprocess-scss": "^0.1.3",
    "autoprefixer": "^9.7.6",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-fail-on-warn": "^0.1.0",
    "postcss-import": "^12.0.1",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^7.0.2",
    "sapper": "^0.27.12",
    "svelte": "^3.20.1",
    "tailwindcss": "^1.2.0"
  }
}
