{
  "name": "percollate-api-client",
  "version": "1.0.0",
  "description": "Web client for percollate api",
  "license": "MIT",
  "scripts": {
    "dev": "sapper dev",
    "build:ssr": "sapper build",
    "build": "sapper export",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "eslint": "eslint -c .eslintrc.json *.{js,svelte}",
    "prettier": "prettier --write *.{ts,tsx,js,jsx,json,css,md,svelte}",
    "precommit": "node -v && lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint -c .eslintrc.json"
    ],
    "*.{ts,tsx,js,jsx,json,css,md,svelte}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "polka": "^0.5.2",
    "sirv": "^0.4.2",
    "svelte-preprocess-sass": "^0.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/runtime": "^7.5.5",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "@kazzkiq/svelte-preprocess-scss": "^0.1.3",
    "autoprefixer": "^9.6.1",
    "cssnano": "latest",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-fail-on-warn": "^0.1.0",
    "postcss-import": "latest",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.1",
    "sapper": "^0.27.8",
    "svelte": "^3.6.10",
    "tailwindcss": "^1.0.6"
  }
}
